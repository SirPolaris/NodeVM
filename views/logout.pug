extends ./layouts/layout-master

block content
    p.lead Please login 
    p 
        small If you do not have a login or have forgotten it
        br
        small Please contact your point person
    br
    form(role='form', action="/login",method="post", style='max-width: 300px;')
        .form-group
            input.form-control(type='text', name="username", placeholder='Enter Username')
        .form-group
            input.form-control(type='password', name="password", placeholder='Password')
        if (hasAdminAccount == false)
            a(href="/createAdmin")
                button.btn.btn-default(type='button') Create First Time Run Admin
        else
            p
            button.btn.btn-primary(type='submit') Submit
        | &nbsp;
        a(href='/')
            button.btn.btn-default(type="button") Cancel