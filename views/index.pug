extends ./layouts/layout-master

block content
    .row-12
        //- Approach
        .card.shadow.mb-4
            .card-header.py-3
                h6.m-0.font-weight-bold.text-primary Welcome Great Friends!
            .card-body
                .text-center
                    img.img-fluid.px-3.px-sm-4.mt-3.mb-4(style="width: 25rem;" src="/img/welcome_cats.png" alt="")

                p Welcome text

    .row
        //- Card Example
        .col-xl-3.col-md-6.mb-4
            .card.border-left-primary.shadow.h-100.py-2
                .card-body
                    .row.no-gutters.align-items-center
                        .col.mr-2
                            .text-xs.font-weight-bold.text-primary.text-uppercase.mb-1 Score
                            .h5.mb-0.font-weight-bold.text-gray-800 132
                        .col-auto
                            i.fas.fa-star.fa-2x.text-gray-300

        //- Card Example
        .col-xl-3.col-md-6.mb-4
            .card.border-left-success.shadow.h-100.py-2
                .card-body
                    .row.no-gutters.align-items-center
                        .col.mr-2
                            .text-xs.font-weight-bold.text-success.text-uppercase.mb-1 Your Funds
                            .h5.mb-0.font-weight-bold.text-gray-800 $680
                        .col-auto
                            i.fas.fa-dollar-sign.fa-2x.text-gray-300

        //- Task Card Example
        .col-xl-3.col-md-6.mb-4
            .card.border-left-info.shadow.h-100.py-2
                .card-body
                    .row.no-gutters.align-items-center
                        .col.mr-2
                            .text-xs.font-weight-bold.text-info.text-uppercase.mb-1 Task
                            .row.no-gutters.align-items-center
                                .col-auto
                                    .h5.mb-0.mr-3.font-weight-bold.text-gray-800 50%
                        .col
                          .progress.progress-sm.mr-2
                            .progress-bar.bg-info(role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100")                       
                        .col-auto
                            i.fas.fa-clipboard-list.fa-2x.text-gray-300

        //- Card Example
        .col-xl-3.col-md-6.mb-4
            .card.border-left-warning.shadow.h-100.py-2
                .card-body
                    .row.no-gutters.align-items-center
                        .col.mr-2
                            .text-xs.font-weight-bold.text-warning.text-uppercase.mb-1 Pending Verification
                            .h5.mb-0.font-weight-bold.text-gray-800 18
                        .col-auto
                            i.fas.fa-star.fa-2x.text-gray-300
    .row    
        //- Area Chart
        .col-xl-8.col-lg-7
            .card.shadow.mb-4
                //- Card Header - Dropdown
                .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                    h6.m-0.font-weight-bold.text-primary  VM useage
                    .dropdown.no-arrow
                        a.dropdown-toggle(href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                            i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400
                        .dropdown-menu.dropdown-menu-right.shadow.animated--fade-in(aria-labelledby="dropdownMenuLink")
                            .dropdown-header Dropdown Header:
                            a.dropdown-item(href="#") Action
                            a.dropdown-item(href="#") Another Action
                            .dropdown-divider
                            a.dropdown-item(href="#") Something else here
                    
                .card-body
                    .chart-area
                        canvas(id="myAreaChart")


        //- Pie Chart
        .col-xl-4.col-lg-5
            .card.shadow.mb-4
                //- Card Header - Dropdown
                .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                    h6.m-0.font-weight-bold.text-primary Your Service Usage
                    .dropdown.no-arrow
                        a.dropdown-toggle(href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                            i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400

                    .dropdown-menu.dropdown-menu-right.shadow.animated--fade-in(aria-labelledby="dropdownMenuLink")
                        .dropdown-header Dropdown Header:
                        a.dropdown-item(href="#") Action
                        a.dropdown-item(href="#") Another action
                        .dropdown-divider
                        a.dropdown-item(href="#") Something else here

                //- Card Body
                .card-body
                    .chart-pie.pt-4.pb-2
                        canvas(id="myPieChart")
            
                    .mt-4.text-center.small
                        span.mr-2
                            i.fas.fa-circle.text-primary 
                            |  Requests
                        
                        span.mr-2
                            i.fas.fa-circle.text-success
                            |  Reports
                        
                        span.mr-2
                            i.fas.fa-circle.text-info
                            |  Internal
                    

    //- Content Row
    .row
        //- Content Column
        .col-lg-6.mb-4
            //- Project Card Example
            .card.shadow.mb-4
                .card-header.py-3
                    h6.m-0.font-weight-bold.text-primary Projects
                .card-body

                    h4.small.font-weight-bold Server Migration
                        span.float-right 20%
                    .progress.mb-4
                        .progress-bar.bg-danger(role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100")

                    h4.small.font-weight-bold Sales Tracking
                        span.float-right 40%
                    .progress.mb-4
                        .progress-bar.bg-warning(role="progressbar" style="width: 40%" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100")
                
                    h4.small.font-weight-bold Customer Database
                        span.float-right 60%
                    .progress.mb-4
                        .progress-bar(role="progressbar" style="width: 60%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100")

                    h4.small.font-weight-bold Payout Details
                        span.float-right 80%
                    .progress.mb-4
                        .progress-bar.bg-info(role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100")
                    
                    h4.small.font-weight-bold Account Setup
                        span.float-right Complete!
                    .progress.mb-4
                        .progress-bar.bg-success(role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100")

        //- Color System
        .col-lg-6.mb-4
            .card.bg-primary.text-white.shadow
                .card-body Primary Blue
                    .text-white-50.small #4e73df

    .row
        .col-lg-6.mb-4
            //- Illustrations
            .card.shadow.mb-4
                .card-header.py-3
                    h6.m-0.font-weight-bold.text-primary Illustrations
            
                .card-body
                    .text-center
                        img.img-fluid.px-3.px-sm-4.mt-3.mb-4(style="width: 25rem;" src="/img/undraw_posting_photo.svg" alt="")

                    p Add some quality, svg illustrations to your project courtesy of 
                        a(target="_blank" rel="nofollow" href="https://undraw.co/") unDraw
                        |  a constantly updated collection of beautiful svg images that you can use completely free and without attribution! 
                    a(target="_blank" rel="nofollow" href="https://undraw.co/") Browse Illustrations on unDraw &rarr;

append scripts
    //- Page level plugins
    script(src="/vendor/chart.js/Chart.min.js")
    
    //- Page level custom scripts
    script(src="/js/demo/chart-area-demo.js")
    script(src="/js/demo/chart-pie-demo.js")


