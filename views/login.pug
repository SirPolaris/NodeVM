extends layouts/layout-wo-menu

block content
    body.bg-gradient-primary
        .container
            //- Outer Row
            .row.justify-content-center
                .col-xl-10.col-lg-12.col-md-9
                    .card.o-hidden.border-0.shadow-lg.my-5
                        .card-body.p-0
                        
                            //- Nested Row within Card Body
                            .row
                                .col-lg-6.d-none.d-lg-block.bg-login-image
                                .col-lg-6
                                    .p-5
                                        .text-center
                                            h1.h4.text-gray-900.mb-4 Welcome Back!

                                        form.user(action="/login" method="post")
                                            .form-group
                                                input.form-control.form-control-user(type="text" id="1" name="username" placeholder="username")
                                                input.form-control.form-control-user(type="password" id="2" name="password" placeholder="password")
                                                                                        
                                            button.btn.btn-primary.btn-user.btn-block(type="submit" value="Submit") Submit
                                    